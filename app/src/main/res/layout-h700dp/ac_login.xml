    <TextView
      android:id="@+id/text_pol1"
      style="@style/StemRegular12Gray"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="0dp"
      android:layout_marginBottom="2dp"
      android:clickable="true"
      android:text="Регистрируясь, вы соглашаетесь с нашими"
      app:layout_constraintBottom_toTopOf="@id/text_pol2"
      app:layout_constraintEnd_toEndOf="@id/line_end"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="@id/line_start" />


    <TextView
      android:id="@+id/text_pol2"
      style="@style/StemRegular12Red"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/ripple_effect_title_click"
      android:clickable="true"
      android:text="Условиями"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="@id/line_start" />


    <TextView
      android:id="@+id/text_pol3"
      style="@style/StemRegular12Gray"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/ripple_effect_title_click"
      android:clickable="true"
      android:text="и"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/text_pol2" />


    <TextView
      android:id="@+id/text_pol4"
      style="@style/StemRegular12Red"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/ripple_effect_title_click"
      android:clickable="true"
      android:text="Политикой конфиденциальности"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/line_end"
      app:layout_constraintStart_toEndOf="@+id/text_pol3" />

    <TextView
      android:id="@+id/text_footer"
      style="@style/StemRegular15Base"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="15dp"
      android:clickable="true"
      android:text="Еще нет аккаунта?"
      app:layout_constraintBottom_toTopOf="@id/text_pol1"
      app:layout_constraintEnd_toStartOf="@id/text_footer2"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent" />

    <TextView
      android:id="@+id/text_footer2"
      style="@style/StemRegular15Base"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:background="@drawable/ripple_effect_title_click"
      android:clickable="true"
      android:text="Зарегистрируйтесь"
      app:layout_constraintBottom_toTopOf="@id/text_pol1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/text_footer" />


    <android.support.constraint.Guideline
      android:id="@+id/line_footer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_end="64dp" />

  </android.support.constraint.ConstraintLayout>
</layout>
