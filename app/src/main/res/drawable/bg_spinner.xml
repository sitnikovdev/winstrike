<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item>

    <layer-list>

      <item>
        <shape>
          <gradient android:angle="90" android:endColor="#F2F2F2" android:startColor="#F2F2F2" android:type="linear" />


          <corners android:radius="12dp" />

          <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape>
      </item>

      <item android:right="5dp">

        <bitmap android:gravity="center_vertical|right" android:src="@drawable/arrow_down" />

      </item>

    </layer-list>

  </item>

</selector>
