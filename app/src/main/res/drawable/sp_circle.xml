<!-- Style for "oval_3" -->
<!-- Add this snippet to layer-list xml in drawable. -->
<shape android:shape="oval"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <solid android:color="#ffffffff" />
        <item android:name="android:shadowColor">#12000000</item>
        <!-- TextView shadow offsets do not respect scale. -->
        <item android:name="android:shadowDx">8</item>
        <item android:name="android:shadowDy">7</item>
    <size
        android:width="87dp"
        android:height="87dp"/>
</shape>
