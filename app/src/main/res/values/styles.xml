<resources>

    <!--Base theme-->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">?themePrimary</item>
        <item name="colorPrimaryDark">?themePrimaryDark</item>
        <item name="colorSecondary">?themeAccent</item>
    </style>

    <!--Custom  theme-->
    <style name="BaseAppTheme.WinstrikeApp">
        <item name="themePrimary">@color/magenta</item>
        <item name="themePrimaryDark">@color/black</item>
        <item name="themeAccent">@color/magenta</item>
        <item name="themeContentBackground">@color/white</item>

        <!--Base colors-->
        <item name="themeContentTextColor">@color/black</item>
        <item name="themeContentTextColoOnPrimary">@color/white</item>

        <!--TextView -->
        <item name="android:textViewStyle">@style/Widget.WinstrikeApp.TextView</item>

    </style>

</resources>
