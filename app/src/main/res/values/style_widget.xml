<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Toolbar: uses in layout: ac_mainscreen.xml and ac_login.xml -->
    <style name="Widget.Winstrike.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?attr/themePrimaryDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
    </style>

    <!-- *********************  Text ********************************************* -->

    <style name="Widget.WinstrikeApp.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@fontFamily/stem_regular</item>
    </style>

    <!--Title -->
    <style name="TextAppearance.Winstrike.Title.Big" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/stem_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Winstrike.Title.Large" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/stem_medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Winstrike.Title" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/stem_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Content-->
    <style name="TextAppearance.Winstrike.Content" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/stem_regular</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextAppearance.Winstrike.Hint.Big" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/stem_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextAppearance.Winstrike.Content.Small" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/stem_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Hint-->
    <style name="TextAppearance.Winstrike.Hint" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/stem_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="TextAppearance.Winstrike.Hint.Small" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/stem_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
    </style>


    <!-- ******************* Buttons ************************************************** -->
    <style name="Widget.Winstrike.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Winstrike.Button</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="cornerRadius">16dp</item>
    </style>
    <style name="TextAppearance.Winstrike.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">?themeContentTextColoOnPrimary</item>
        <item name="android:fontFamily">@font/stem_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Phone and Password edit text fields-->
    <style name="Widget.Winstrike.EditView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/edit_text_shape</item>
    </style>

    <!--DatePickerDialog-->
    <style name="DateDialog" parent="Theme.AppCompat.Dialog">
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="colorAccent">?themeAccent</item>
        <item name="windowActionBar">false</item>
    </style>


    <!-- Profile fragment: Tab layout theme-->
    <style name="TabLayoutProfile" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>

