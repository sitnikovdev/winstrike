<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Toolbar: uses in layout: ac_mainscreen.xml and ac_login.xml -->
    <style name="Widget.Winstrike.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="android:background">?attr/themePrimaryDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
    </style>

    <!-- *********************  Text ********************************************* -->

    <!--Title-->
    <style name="TextAppearance.Winstrike.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Title Big-->
    <style name="TextAppearance.Winstrike.Title.Big" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--Title Large-->
    <style name="TextAppearance.Winstrike.Title.Large" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!--Content-->
    <style name="TextAppearance.Winstrike.Content" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
    </style>

    <!--Content Small-->
    <style name="TextAppearance.Winstrike.Content.Small" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
    </style>

    <!--Hint-->
    <style name="TextAppearance.Winstrike.Hint" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--Hint Small-->
    <style name="TextAppearance.Winstrike.Hint.Small" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Hint Big-->
    <style name="TextAppearance.Winstrike.Hint.Big" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- ******************* Buttons ************************************************** -->
    <style name="Widget.Winstrike.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Winstrike.Button</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="TextAppearance.Winstrike.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">?themeContentTextColoOnPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>


    <!-- Profile fragment: Tab layout theme-->
    <style name="TabLayoutProfile" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>
    </style>


    <!--DatePickerDialog-->
    <style name="Theme.Winstrike.DateDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!--Custom attributes-->
        <item name="dialogCornerRadius">20dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimaryInverse">@color/yellow</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>


