    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/v_code"
        app:layout_constraintEnd_toEndOf="@id/v_code"
        app:layout_constraintTop_toTopOf="@id/v_code"
        app:srcCompat="@drawable/ic_close" />
-->


    <TextView
        android:id="@+id/tv_country"
        style="@style/StemRegular15Base04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/start_edit_24dp"
        android:text="@string/all_phonemaskru"
        app:layout_constraintStart_toStartOf="@id/v_code"
        app:layout_constraintTop_toTopOf="@id/v_code"
        app:layout_constraintBottom_toBottomOf="@id/v_code"
        />


    <View
        android:id="@+id/img_div"
        android:layout_width="1dp"
        android:layout_height="19dp"
        android:layout_marginStart="15dp"
        android:background="#000000"
        android:alpha=".2"
        app:layout_constraintStart_toEndOf="@id/tv_country"
        app:layout_constraintTop_toTopOf="@id/v_code"
        app:layout_constraintBottom_toBottomOf="@id/v_code"
        />


    <ru.prsolution.winstrike.common.utils.ClearableEditText
        android:id="@+id/et_code"
        style="@style/StemRegular15Base"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="@string/all_phonemask"
        android:background="@null"
        android:inputType="phone"
        android:textColorHint="@color/color_grey"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="@id/img_div"
        app:layout_constraintTop_toTopOf="@id/v_code"
        app:layout_constraintBottom_toBottomOf="@id/v_code"
        android:visibility="visible"
        />

    <View
        android:id="@+id/v_paybtn"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_bgr_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_free" />

    <TextView
        android:id="@+id/tv_next_btn"
        style="@style/StemMedium15Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оплатить"
        app:layout_constraintBottom_toBottomOf="@id/v_paybtn"
        app:layout_constraintEnd_toEndOf="@id/v_paybtn"
        app:layout_constraintStart_toStartOf="@id/v_paybtn"
        app:layout_constraintTop_toTopOf="@id/v_paybtn" />


</android.support.constraint.ConstraintLayout>