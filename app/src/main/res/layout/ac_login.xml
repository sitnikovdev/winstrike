<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ru.prsolution.winstrike.ui.login.SignInActivity">

    <android.support.constraint.Guideline
        android:id="@+id/line_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="14dp" />

    <android.support.constraint.Guideline
        android:id="@+id/line_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="44dp" />

    <android.support.constraint.Guideline
        android:id="@+id/line_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="44dp" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_logo_login"
        android:src="@drawable/winstrike_logo"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toTopOf="@id/line_status" />

    <!--<include layout="@layout/part_logo" />-->

    <View android:id="@+id/v_lang"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/spacing_lang_loging"
        android:background="@drawable/etittext_bgr_28dp"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toBottomOf="@id/image_logo"
        />


    <TextView
        android:id="@+id/tv_country"
        style="@style/StemRegular15Base04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/start_edit_24dp"
        android:text="@string/all_phonemaskru"
        app:layout_constraintStart_toStartOf="@id/v_lang"
        app:layout_constraintTop_toTopOf="@id/v_lang"
        app:layout_constraintBottom_toBottomOf="@id/v_lang"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="19dp"
        android:layout_marginStart="15dp"
        android:background="#000000"
        android:alpha=".2"
        app:layout_constraintStart_toEndOf="@id/tv_country"
        app:layout_constraintTop_toTopOf="@id/v_lang"
        app:layout_constraintBottom_toBottomOf="@id/v_lang"
        />

    <ImageView
        android:id="@+id/img_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="14dp"
        android:background="@drawable/div_line"
        app:layout_constraintStart_toEndOf="@id/tv_country"
        app:layout_constraintTop_toTopOf="@id/v_lang"
        app:layout_constraintBottom_toBottomOf="@id/v_lang"
        />

    <EditText
        android:id="@+id/et_phone"
        style="@style/StemRegular15Base"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textColorHint="@color/color_grey"
        android:layout_marginStart="15dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="@id/img_div"
        app:layout_constraintTop_toTopOf="@id/v_lang"
        app:layout_constraintBottom_toBottomOf="@id/v_lang"
        android:visibility="visible"
        />


    <View
        android:id="@+id/end_at"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toBottomOf="@id/v_lang"
        />

    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
        android:id="@+id/et_password"
        style="@style/StemRegular15Base"
        android:inputType="textPassword"
        android:textColorHint="@color/color_grey"
        app:additionalTouchTargetSize="80dp"
        app:drawable_hide="@mipmap/ic_hide_eye"
        app:drawable_show="@mipmap/ic_show_eye"
        app:tint_color="@color/color_accent"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/login_password_hint"
        app:layout_constraintBottom_toBottomOf="@id/end_at"
        app:layout_constraintEnd_toEndOf="@id/end_at"
        app:layout_constraintStart_toStartOf="@id/end_at"
        app:layout_constraintTop_toTopOf="@id/end_at" />

    <View
        android:id="@+id/v_button"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_bgr_24dp"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toBottomOf="@id/end_at"/>

    <TextView
        android:id="@+id/text_button_title"
        style="@style/StemMedium15Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_enterbtn"
        app:layout_constraintBottom_toBottomOf="@id/v_button"
        app:layout_constraintEnd_toEndOf="@id/v_button"
        app:layout_constraintStart_toStartOf="@id/v_button"
        app:layout_constraintTop_toTopOf="@id/v_button" />

    <TextView
        android:id="@+id/text_hint_question"
        style="@style/StemRegular13Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_hint"
        android:layout_marginTop="@dimen/spacing_hint_loging"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toBottomOf="@id/v_button"/>

    <TextView
        android:id="@+id/text_help_link"
        style="@style/StemRegular15Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="@string/login_helplink"
        android:background="@drawable/ripple_effect_title_click"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toBottomOf="@id/text_hint_question"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintTop_toTopOf="@id/text_help_link"
        />

    <TextView
        android:id="@+id/text_enter_social"
        style="@style/StemRegular15Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_entersocial"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toBottomOf="@id/text_help_link"
        android:visibility="gone"
        />


