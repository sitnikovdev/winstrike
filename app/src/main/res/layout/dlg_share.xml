<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="55dp"
    android:layout_marginEnd="55dp"
    android:paddingTop="24dp"
    android:paddingBottom="23dp"
    android:background="@drawable/dialog_bg"
    >


    <TextView
        android:id="@+id/tv_header"
        style="@style/StemRegular15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sharedlg_title"
        android:textAlignment="center"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="47dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.constraint.Guideline
        android:id="@+id/line_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="85dp" />

    <!-- Icons block -->

    <ImageView
        android:id="@+id/icon_vk"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margingtop_socicons"
        android:src="@drawable/img_vk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_whatsup"
        app:layout_constraintTop_toBottomOf="@id/tv_header" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_effect_circle"
        app:layout_constraintBottom_toBottomOf="@id/icon_vk"
        app:layout_constraintEnd_toEndOf="@id/icon_vk"
        app:layout_constraintStart_toStartOf="@id/icon_vk"
        app:layout_constraintTop_toTopOf="@id/icon_vk" />

    <ImageView
        android:id="@+id/icon_whatsup"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margingtop_socicons"
        android:src="@drawable/img_whatsup"
        app:layout_constraintStart_toEndOf="@id/icon_vk"
        app:layout_constraintEnd_toStartOf="@+id/icon_tweeter"
        app:layout_constraintTop_toBottomOf="@id/tv_header" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_effect_circle"
        app:layout_constraintBottom_toBottomOf="@id/icon_whatsup"
        app:layout_constraintEnd_toEndOf="@id/icon_whatsup"
        app:layout_constraintStart_toStartOf="@id/icon_whatsup"
        app:layout_constraintTop_toTopOf="@id/icon_whatsup" />


    <ImageView
        android:id="@+id/icon_telegram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margingtop_socicons"
        android:src="@drawable/img_telegram"
        app:layout_constraintStart_toEndOf="@id/icon_whatsup"
        app:layout_constraintEnd_toStartOf="@id/icon_tweeter"
        app:layout_constraintTop_toBottomOf="@id/tv_header" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_effect_circle"
        app:layout_constraintBottom_toBottomOf="@id/icon_tweeter"
        app:layout_constraintEnd_toEndOf="@id/icon_tweeter"
        app:layout_constraintStart_toStartOf="@id/icon_tweeter"
        app:layout_constraintTop_toTopOf="@id/icon_tweeter" />


    <ImageView
        android:id="@+id/icon_tweeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margingtop_socicons"
        android:src="@drawable/img_tweeter"
        app:layout_constraintStart_toEndOf="@id/icon_tweeter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_header"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_effect_circle"
        app:layout_constraintBottom_toBottomOf="@id/icon_tweeter"
        
        app:layout_constraintEnd_toEndOf="@id/icon_tweeter"
        app:layout_constraintStart_toStartOf="@id/icon_tweeter"
        app:layout_constraintTop_toTopOf="@id/icon_tweeter" 
        />

    <!-- Icons block -->
    


    <TextView
        android:id="@+id/textView2"
        style="@style/StemRegular15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:text="@string/sharedlg_titlebonus"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_cancel"/>




    <android.support.v7.widget.CardView
        android:id="@+id/btn_cancel"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:foreground="@drawable/ripple_effect"
        android:clickable="true"
        app:cardBackgroundColor="@color/color_primary"
        app:cardCornerRadius="6dp"
        android:elevation="8dp"
        android:layout_marginTop="187dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       >
        <TextView
            style="@style/StemBold17Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/all_cancelbtn"
            />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>