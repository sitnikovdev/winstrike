<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="235dp"
    android:layout_height="315dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="right|top"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="22dp"
    android:paddingTop="24dp"
    android:paddingBottom="32dp"
    android:background="@drawable/legend_bg"
    tools:context=".common.FavPushDialogActivity">


    <TextView
        android:id="@+id/tv_legend"
        style="@style/StemMedium17Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Легенда:"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0"
        />
    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/seat_vip"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_legend"
        />
    <TextView
        android:id="@+id/tv_vip"
        android:text="Vip"
        style="@style/StemRegular15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toEndOf="@id/iv_vip"
        app:layout_constraintTop_toBottomOf="@id/tv_legend"
        />
    <ImageView
        android:id="@+id/iv_lockyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/seat_lockyou"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_vip"
        />
    <TextView
        android:id="@+id/tv_lockyou"
        android:text="Забронировано вами"
        style="@style/StemRegular15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toEndOf="@id/iv_vip"
        app:layout_constraintTop_toBottomOf="@id/tv_vip"
        />
    <ImageView
        android:id="@+id/iv_locked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/seat_locked"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_lockyou"
        />
    <TextView
        android:id="@+id/tv_locked"
        android:text="Забронировано"
        style="@style/StemRegular15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toEndOf="@id/iv_vip"
        app:layout_constraintTop_toBottomOf="@id/tv_lockyou"
        />
    <ImageView
        android:id="@+id/iv_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/seat_free"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_locked"
        />
    <TextView
        android:id="@+id/tv_free"
        android:text="Свободно"
        style="@style/StemRegular15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toEndOf="@id/iv_vip"
        app:layout_constraintTop_toBottomOf="@id/tv_locked"
        />

    <TextView
        android:id="@+id/tv_see"
        android:text="Понял!"
        style="@style/StemMedium17Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_free"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>