<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_club_radius">

        <android.support.constraint.ConstraintLayout
            android:layout_marginTop="@dimen/padding_standart_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.Guideline
                android:id="@+id/line_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/keyline_40dp" />

            <android.support.constraint.Guideline
                android:id="@+id/line_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/keyline_40dp" />

            <android.support.constraint.Guideline
                android:id="@+id/line_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/height_toolbar_56dp" />

            <android.support.constraint.Guideline
                android:id="@+id/line_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/height_statusbar_14dp" />

            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_komkov"
                app:layout_constraintEnd_toEndOf="@id/line_end"
                app:layout_constraintStart_toStartOf="@id/line_start"
                app:layout_constraintTop_toTopOf="@id/line_status" />

            <TextView
                android:id="@+id/tv_date_news"
                style="@style/StemRegular12Black07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginTop="24dp"
                android:text="@string/itemnews_date"
                app:layout_constraintStart_toStartOf="@id/tv_next"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_next"
                />


            <ImageView
                android:id="@+id/iv_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/eye"
                app:layout_constraintStart_toEndOf="@id/tv_date_news"
                app:layout_constraintBottom_toBottomOf="@id/tv_date_news"
                />

            <TextView
                android:id="@+id/tv_views"
                style="@style/StemRegular12Black07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/itemnews_views"
                app:layout_constraintEnd_toEndOf="@id/iv_thumbnail"
                app:layout_constraintBottom_toBottomOf="@id/iv_eye"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_date_news"
                />

            <TextView
                android:id="@+id/tv_head_news"
                style="@style/StemMedium17Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/itemnews_title"
                app:layout_constraintStart_toStartOf="@id/iv_thumbnail"
                app:layout_constraintTop_toBottomOf="@id/iv_thumbnail" />

            <TextView
                android:id="@+id/tv_descriptions"
                style="@style/StemRegular15Gray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/iv_thumbnail"
                app:layout_constraintEnd_toEndOf="@id/iv_thumbnail"
                app:layout_constraintTop_toBottomOf="@id/tv_head_news" />

            <TextView
                android:id="@+id/tv_next"
                style="@style/StemRegular12Accent"
                android:text="@string/itemnews_read"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="2dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_effect_title_click"
                android:clickable="true"
                android:layout_marginTop="24dp"
                android:paddingBottom="2dp"
                app:layout_constraintStart_toStartOf="@id/iv_thumbnail"
                app:layout_constraintTop_toBottomOf="@id/tv_descriptions"
                android:focusable="true" />

            <View
                android:id="@+id/v_separator"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:background="@drawable/main_shadow_separator"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_next"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
