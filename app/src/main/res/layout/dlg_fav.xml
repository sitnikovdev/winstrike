<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="22dp"
    android:paddingTop="24dp"
    android:paddingBottom="32dp"
    android:background="@drawable/dialog_bg"
    tools:context=".common.FavPushDialogActivity">


    <TextView
        android:id="@+id/tv_header"
        style="@style/StemRegular17Base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/favdlg_title"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0"
        />


    <TextView
        android:id="@+id/cs_game"
        style="@style/StemRegular15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favdlg_cs"
        android:layout_marginStart="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_games" />

    <ImageView
        android:id="@+id/iv_cs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/checked"
        android:visibility="visible"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toEndOf="@id/line_checkbox"
        app:layout_constraintBottom_toBottomOf="@+id/cs_game" />


    <TextView
        android:id="@+id/dota2_game"
        style="@style/StemRegular15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/favdlg_dota"
        app:layout_constraintStart_toStartOf="@+id/cs_game"
        app:layout_constraintTop_toBottomOf="@+id/cs_game" />

    <ImageView
        android:id="@+id/iv_dota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/checked"
        android:visibility="gone"
        app:layout_goneMarginBottom="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/dota2_game"
        app:layout_constraintStart_toStartOf="@id/line_checkbox"
        />


    <android.support.constraint.Guideline
        android:id="@+id/line_checkbox"
        app:layout_constraintGuide_begin="90dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.constraint.Guideline
        android:id="@+id/line_games"
        app:layout_constraintGuide_begin="70dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.CardView
        android:id="@+id/btn_cancel"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        android:foreground="@drawable/ripple_effect"
        android:clickable="true"
        app:cardBackgroundColor="@color/color_primary"
        app:cardCornerRadius="6dp"
        android:elevation="8dp"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       >
        <TextView
            style="@style/StemRegular17Base061"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/all_dismisbtn"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/btn_ok"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginEnd="63dp"
        android:foreground="@drawable/ripple_effect"
        android:clickable="true"
        app:cardBackgroundColor="@color/color_primary"
        app:cardCornerRadius="6dp"
        android:elevation="8dp"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            style="@style/StemMedium17Black"
            android:text="@string/all_confirmbtn"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            />
    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>