<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_fav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:activity="ru.prsolution.winstrike.common.fragment.AddGameFragment">


    <android.support.constraint.Guideline
        android:id="@+id/line_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="55dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_games"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_head"
        android:visibility="gone"
        />

    <View
        android:id="@+id/v_btn_add"
        android:layout_width="@dimen/width_button"
        android:layout_height="@dimen/height_button"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_bgr_16dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_games"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_btn_title"
        style="@style/StemMedium15Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Применить"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/v_btn_add"
        app:layout_constraintEnd_toEndOf="@id/v_btn_add"
        app:layout_constraintStart_toStartOf="@id/v_btn_add"
        app:layout_constraintTop_toTopOf="@id/v_btn_add"
        />

</android.support.constraint.ConstraintLayout>
