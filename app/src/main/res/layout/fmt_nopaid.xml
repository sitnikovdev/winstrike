
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/height_edit_56dp"
    tools:activity="ru.prsolution.winstrike.common.fragment.PlacesListFragment">
    <!--By default, height of Toolbar and Bottom Navigation are equal-->
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_noplaces"
        android:foreground="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_date_tt"
        style="@style/StemMedium15Black"
        android:text="У вас нет оплаченых мест"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/thumbnail"
        />


</RelativeLayout>
