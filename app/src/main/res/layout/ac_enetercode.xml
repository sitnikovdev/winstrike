<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:activity="ru.prsolution.winstrike.common.__SmsCodeActivity"
    android:orientation="vertical">

    <android.support.constraint.Guideline
        android:id="@+id/line_start"
        app:layout_constraintGuide_begin="40dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.constraint.Guideline
        android:id="@+id/line_end"
        app:layout_constraintGuide_end="40dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.constraint.Guideline
        android:id="@+id/line_center"
        app:layout_constraintGuide_percent=".5"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <View
        android:id="@+id/v_oval"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@drawable/sp_circle"
        android:layout_marginTop="@dimen/spacing_50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        />


    <ImageView
        android:id="@+id/image_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_unlock"
        app:layout_constraintTop_toTopOf="@id/v_oval"
        app:layout_constraintBottom_toBottomOf="@id/v_oval"
        app:layout_constraintStart_toStartOf="@id/v_oval"
        app:layout_constraintEnd_toEndOf="@id/v_oval"
        />


    <TextView
        android:id="@+id/tv_phone"
        style="@style/StemMedium15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_title_click"
        android:text="@string/helpunlock_title"
        android:layout_marginTop="@dimen/spacing_56dp"
        app:layout_constraintTop_toBottomOf="@id/v_oval"
        app:layout_constraintStart_toStartOf="@id/tv_hint"
        />

    <TextView
        android:id="@+id/tv_hint"
        style="@style/StemRegular15Base"
        android:text="@string/helpunlock_description"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintTop_toBottomOf="@id/tv_phone"
        />

    <View
        android:id="@+id/v_code"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:background="@drawable/etittext_bgr_28dp"
        android:layout_marginTop="@dimen/padding_standart_16dp"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        />

    <TextView
        android:id="@+id/tv_title"
        style="@style/StemMedium15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/margingtop_button_32dp"
        android:text="@string/all_entercode"
        app:layout_constraintTop_toBottomOf="@id/tv_hint"
        app:layout_constraintStart_toStartOf="@id/tv_hint"
        />


    <EditText
        android:id="@+id/et_code"
        style="@style/StemRegular15Base"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marging_edit_24dp"
        android:hint="@string/all_hintcode"
        android:textColorHint="@color/color_grey"
        android:inputType="text"
        android:maxLength="6"
        app:layout_constraintStart_toStartOf="@id/v_code"
        app:layout_constraintTop_toTopOf="@id/v_code"
        app:layout_constraintBottom_toBottomOf="@id/v_code"
        />

    <View
        android:id="@+id/next_button"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="@drawable/button_bgr_24dp"
        android:layout_marginTop="@dimen/margingtop_button_32dp"
        app:layout_constraintTop_toBottomOf="@+id/v_code"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        />

    <TextView
        android:id="@+id/tv_next_btn"
        style="@style/StemMedium15Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_nextbtn"
        app:layout_constraintBottom_toBottomOf="@id/next_button"
        app:layout_constraintEnd_toEndOf="@id/next_button"
        app:layout_constraintStart_toStartOf="@id/next_button"
        app:layout_constraintTop_toTopOf="@id/next_button"
        />


    <TextView
        android:id="@+id/text_footer"
        style="@style/StemRegular15Base"
        android:text="@string/all_logfooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ripple_effect_title_click"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>

