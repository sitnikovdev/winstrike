<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_primary_dark"
        android:theme="@style/MainToolBarTheme"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/toolbar_text"
            android:text="Test Winstrike Arena"
            android:textColor="@color/color_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Winstrike Arena"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            />

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.Space
        android:id="@+id/spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <ScrollView
        android:id="@+id/rootScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_alignTop="@id/main_toolbar"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.Guideline
                android:id="@+id/line_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/keyline_40dp" />

            <android.support.constraint.Guideline
                android:id="@+id/line_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/keyline_40dp" />

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:src="@drawable/head_img"
                app:layout_constraintEnd_toEndOf="@id/line_end"
                app:layout_constraintStart_toStartOf="@id/line_start"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/seat_title"
                style="@style/StemRegular15Base"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:text="@string/club_full_name"
                app:layout_constraintBottom_toTopOf="@id/head_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/description"
                style="@style/StemRegular14Black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:text="@string/seatdetail_description"
                app:layout_constraintEnd_toEndOf="@id/line_end"
                app:layout_constraintStart_toStartOf="@id/line_start"
                app:layout_constraintTop_toBottomOf="@id/head_image" />


            <TextView
                android:id="@+id/category"
                style="@style/StemMedium15Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_category_seat"
                android:text="@string/seatdetail_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description" />

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_seat"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_vp_seat"
                android:overScrollMode="never"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/ab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        />


    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/ab_bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        />


    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        app:tabTextAppearance="@style/TabLayoutProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        />

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigationViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:visibility="gone"
        />

    <View
        android:id="@+id/v_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/color_white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</RelativeLayout>