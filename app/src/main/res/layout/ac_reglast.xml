<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.prsolution.winstrike.common.RegistrationLastActivity">

    <android.support.constraint.Guideline
        android:id="@+id/line_start"
        app:layout_constraintGuide_begin="@dimen/keyline_40dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.constraint.Guideline
        android:id="@+id/line_end"
        app:layout_constraintGuide_end="@dimen/keyline_40dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.constraint.Guideline
        android:id="@+id/line_center"
        app:layout_constraintGuide_percent=".5"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <ImageView
        android:id="@+id/image_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_form"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tv_phone"
        style="@style/StemRegular15Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_title_click"
        android:text="@string/registerlast_title"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/image_email"
        app:layout_constraintStart_toStartOf="@id/v_lang"
        />


    <View android:id="@+id/v_lang"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:layout_marginTop="279dp"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- TODO: change size of under accent line below edit text -->
    <EditText
        android:id="@+id/et_email"
        style="@style/StemRegular15Base"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:hint="@string/registerlast_fio"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/color_primary_dark"
        android:layout_marginStart="@dimen/marging_edit_24dp"
        app:layout_constraintBottom_toBottomOf="@id/v_lang"
        app:layout_constraintStart_toStartOf="@id/v_lang"
        app:layout_constraintTop_toTopOf="@id/v_lang" />

    <View
        android:id="@+id/end_at"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/marging_edit_24dp"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toBottomOf="@id/v_lang"
        />

    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
        android:id="@+id/et_password"
        style="@style/StemRegular15Base"
        android:inputType="textPassword"
        android:textColorHint="@color/color_primary_dark"
        app:additionalTouchTargetSize="80dp"
        app:drawable_hide="@mipmap/ic_hide_eye"
        app:drawable_show="@mipmap/ic_show_eye"
        app:tint_color="@color/color_accent"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:hint="@string/login_password_hint"
        android:layout_marginStart="@dimen/marging_edit_24dp"
        app:layout_constraintBottom_toBottomOf="@id/end_at"
        app:layout_constraintStart_toStartOf="@id/end_at"
        app:layout_constraintTop_toTopOf="@id/end_at" />

    <View
        android:id="@+id/next_button"
        android:layout_width="@dimen/width_button"
        android:layout_height="@dimen/height_button"
        android:layout_marginBottom="@dimen/margingbot_reglastbtn_120dp"
        android:background="@drawable/button_bgr_24dp"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_button_title"
        style="@style/StemRegular15White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registerlast_btntitle"
        app:layout_constraintBottom_toBottomOf="@id/next_button"
        app:layout_constraintEnd_toEndOf="@id/next_button"
        app:layout_constraintStart_toStartOf="@id/next_button"
        app:layout_constraintTop_toTopOf="@id/next_button" />


    <TextView
        android:id="@+id/text_footer"
        style="@style/StemRegular15Base"
        android:text="@string/registerlast_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margingbot_footer_15dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <android.support.constraint.Guideline
        android:id="@+id/line_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="64dp" />

</android.support.constraint.ConstraintLayout>
