<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_nocomp"
                android:foreground="?selectableItemBackgroundBorderless"
                android:clickable="true"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/tv_date_tt"
                style="@style/StemMedium15Black"
                android:text="У вас нет оплаченых мест"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="@id/thumbnail"
                app:layout_constraintEnd_toEndOf="@id/thumbnail"
                app:layout_constraintTop_toBottomOf="@id/thumbnail"
                />

            <View
                android:id="@+id/v_separator"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/main_shadow_separator"
                app:layout_constraintTop_toBottomOf="@id/tv_pccode"
                />

</android.support.constraint.ConstraintLayout>
