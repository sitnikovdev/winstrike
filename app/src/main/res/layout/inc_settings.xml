<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_settings"
    android:layout_width="344dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/color_primary"
    android:choiceMode="none"
    android:clickable="true"
    android:focusable="true">

    <android.support.constraint.Guideline
        android:id="@+id/line_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="65dp" />

    <android.support.constraint.Guideline
        android:id="@+id/line_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="65dp" />

    <android.support.constraint.Guideline
        android:id="@+id/line_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/height_toolbar_56dp" />

    <android.support.constraint.Guideline
        android:id="@+id/line_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/height_statusbar_14dp" />

    <ImageView
        android:id="@+id/image_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_arrow_black"
        app:layout_constraintBottom_toBottomOf="@id/line_head"
        app:layout_constraintEnd_toEndOf="@id/line_start"
        app:layout_constraintHorizontal_bias=".8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_status"
        android:visibility="invisible"
        />

    <View
        android:id="@+id/back_arrow"
        android:layout_width="@dimen/size_tap_50"
        android:layout_height="@dimen/size_tap_50"
        app:layout_constraintEnd_toEndOf="@id/line_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_status"
        />

    <TextView
        android:id="@+id/title_settings"
        style="@style/StemMedium20Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        app:layout_constraintBottom_toBottomOf="@id/line_head"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toTopOf="@id/line_status" />

    <!--Language select-->
    <View
        android:id="@+id/v_lang"
        android:layout_width="244dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toTopOf="@id/line_head" />

    <TextView
        android:id="@+id/text_lang_title"
        style="@style/StemRegular15Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_selectlang"
        app:layout_constraintBottom_toBottomOf="@id/v_lang"
        app:layout_constraintEnd_toEndOf="@id/v_lang"
        app:layout_constraintStart_toStartOf="@id/v_lang"
        app:layout_constraintTop_toTopOf="@id/v_lang" />


    <View
        android:id="@+id/fl_arrow_tap_down_lang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/v_lang"
        app:layout_constraintTop_toTopOf="@id/v_lang" />

    <View
        android:id="@+id/fl_arrow_tap_up_lang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/v_lang"
        app:layout_constraintTop_toTopOf="@id/v_lang" />

    <ImageView
        android:id="@+id/image_lang_down_arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/down_arrow"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/v_lang"
        app:layout_constraintTop_toTopOf="@id/text_lang_title" />

    <ImageView
        android:id="@+id/image_lang_up_arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/up_arow"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/v_lang"
        app:layout_constraintTop_toTopOf="@id/text_lang_title" />

    <ImageView
        android:id="@+id/image_lang_ru_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:background="@drawable/ru_lang"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/v_lang"
        app:layout_constraintTop_toTopOf="@id/text_lang_title" />

    <ImageView
        android:id="@+id/image_lang_en_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:background="@drawable/en_lang"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/v_lang"
        app:layout_constraintTop_toTopOf="@id/text_lang_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_languages_list"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/v_lang"
        app:layout_constraintTop_toBottomOf="@id/v_lang" />

    <!--City select-->
    <View
        android:id="@+id/image_round_frame_city"
        android:layout_width="244dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toBottomOf="@id/rv_languages_list" />

    <TextView
        android:id="@+id/text_city_title"
        style="@style/StemRegular15Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_selectcity"
        app:layout_constraintBottom_toBottomOf="@id/image_round_frame_city"
        app:layout_constraintEnd_toEndOf="@id/image_round_frame_city"
        app:layout_constraintStart_toStartOf="@id/image_round_frame_city"
        app:layout_constraintTop_toTopOf="@id/image_round_frame_city" />


    <ImageView
        android:id="@+id/image_city_down_arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/down_arrow"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/image_round_frame_city"
        app:layout_constraintTop_toTopOf="@id/text_city_title" />

    <ImageView
        android:id="@+id/image_city_up_arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/up_arow"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/image_round_frame_city"
        app:layout_constraintTop_toTopOf="@id/text_city_title" />

    <View
        android:id="@+id/fl_arrow_tap_down_city"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/image_round_frame_city"
        app:layout_constraintTop_toTopOf="@id/image_round_frame_city" />

    <View
        android:id="@+id/fl_arrow__tap_up_city"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/image_round_frame_city"
        app:layout_constraintTop_toTopOf="@id/image_round_frame_city" />

    <ImageView
        android:id="@+id/image_loc_city_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:src="@drawable/bullet"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/image_round_frame_city"
        app:layout_constraintTop_toTopOf="@id/text_city_title" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cities_list"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/image_round_frame_city"
        app:layout_constraintTop_toBottomOf="@id/image_round_frame_city" />

    <!--Arena select-->
    <View
        android:id="@+id/image_round_frame_arena"
        android:layout_width="244dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toBottomOf="@id/rv_cities_list" />

    <TextView
        android:id="@+id/text_arena_title"
        style="@style/StemRegular15Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_selectarena"
        app:layout_constraintBottom_toBottomOf="@id/image_round_frame_arena"
        app:layout_constraintEnd_toEndOf="@id/image_round_frame_arena"
        app:layout_constraintStart_toStartOf="@id/image_round_frame_arena"
        app:layout_constraintTop_toTopOf="@id/image_round_frame_arena" />

    <View
        android:id="@+id/fl_arrow_tap_down_arena"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/image_round_frame_arena"
        app:layout_constraintTop_toTopOf="@id/image_round_frame_arena" />

    <View
        android:id="@+id/fl_arrow_tap_up_arena"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/image_round_frame_arena"
        app:layout_constraintTop_toTopOf="@id/image_round_frame_arena" />

    <ImageView
        android:id="@+id/image_arena_down_arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/down_arrow"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/image_round_frame_arena"
        app:layout_constraintTop_toTopOf="@id/text_arena_title" />

    <ImageView
        android:id="@+id/image_arena_up_arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/up_arow"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/image_round_frame_arena"
        app:layout_constraintTop_toTopOf="@id/text_arena_title" />

    <ImageView
        android:id="@+id/image_arena_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_arena"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/v_lang"
        app:layout_constraintTop_toTopOf="@id/text_arena_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_arena_list"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/image_round_frame_arena"
        app:layout_constraintTop_toBottomOf="@id/image_round_frame_arena" />

    <!--Social content-->
    <TextView
        android:id="@+id/text_social"
        style="@style/StemMedium15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/all_social"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintTop_toBottomOf="@id/image_round_frame_arena" />


    <android.support.constraint.Guideline
        android:id="@+id/line_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="346dp" />

    <!-- Icons block -->

    <ImageView
        android:id="@+id/icon_vk"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_social"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_instagram"
        app:srcCompat="@drawable/icon_vk" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="@drawable/ripple_effect_circle"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/icon_vk"
        app:layout_constraintEnd_toEndOf="@id/icon_vk"
        app:layout_constraintTop_toTopOf="@id/icon_vk"
        app:layout_constraintBottom_toBottomOf="@id/icon_vk"
        android:focusable="true" />

    <ImageView
        android:id="@+id/icon_instagram"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_social"
        app:layout_constraintStart_toEndOf="@id/icon_vk"
        app:layout_constraintEnd_toStartOf="@+id/icon_tweeter"
        app:srcCompat="@drawable/ic_instagram" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="@drawable/ripple_effect_circle"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/icon_instagram"
        app:layout_constraintEnd_toEndOf="@id/icon_instagram"
        app:layout_constraintTop_toTopOf="@id/icon_instagram"
        app:layout_constraintBottom_toBottomOf="@id/icon_instagram"
        android:focusable="true" />


    <ImageView
        android:id="@+id/icon_tweeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/icon_instagram"
        app:layout_constraintEnd_toStartOf="@id/icon_facebook"
        app:layout_constraintTop_toBottomOf="@id/text_social"
        app:srcCompat="@drawable/ic_telegram" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="@drawable/ripple_effect_circle"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/icon_tweeter"
        app:layout_constraintEnd_toEndOf="@id/icon_tweeter"
        app:layout_constraintTop_toTopOf="@id/icon_tweeter"
        app:layout_constraintBottom_toBottomOf="@id/icon_tweeter"
        android:focusable="true" />


    <ImageView
        android:id="@+id/icon_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_social"
        app:layout_constraintStart_toEndOf="@id/icon_tweeter"
        app:layout_constraintEnd_toStartOf="@id/icon_twitch"
        app:srcCompat="@drawable/icon_facebook" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="@drawable/ripple_effect_circle"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/icon_facebook"
        app:layout_constraintEnd_toEndOf="@id/icon_facebook"
        app:layout_constraintTop_toTopOf="@id/icon_facebook"
        app:layout_constraintBottom_toBottomOf="@id/icon_facebook"
        android:focusable="true" />


    <ImageView
        android:id="@+id/icon_twitch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_twitch"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_social"
        app:layout_constraintStart_toEndOf="@id/icon_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="@drawable/ripple_effect_circle"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/icon_twitch"
        app:layout_constraintEnd_toEndOf="@id/icon_twitch"
        app:layout_constraintTop_toTopOf="@id/icon_twitch"
        app:layout_constraintBottom_toBottomOf="@id/icon_twitch"
        android:focusable="true" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/sw_push"
        style="@style/pushSwitch"
        android:text="@string/settings_push"
        android:layout_marginBottom="43dp"
        app:layout_constraintStart_toStartOf="@id/line_start"
        app:layout_constraintBottom_toTopOf="@id/text_ready"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/text_ready"
        style="@style/StemMedium17Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="@string/settings_ready"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/line_end"
        app:layout_constraintStart_toStartOf="@id/line_start" />

</android.support.constraint.ConstraintLayout>

