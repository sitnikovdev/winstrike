<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:fresco="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
  <data>
    <import type="android.view.View"/>
    <import type="android.text.TextUtils"/>
    <variable
      name="seat"
      type="ru.prsolution.winstrike.mvp.models.SeatModel"/>
    <variable
      name="td"
      type="ru.prsolution.winstrike.mvp.models.TimeDataModel"/>

    <variable
      name="iChooseView"
      type="ru.prsolution.winstrike.mvp.views.IChooseView"/>

  </data>

  <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    android:layout_marginBottom="25dp" >

    <android.support.constraint.ConstraintLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/fragment_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <TextView
        android:id="@+id/seat_title"
        style="@style/StemMedium15Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignStart="@id/head_image"
        android:text="@{seat.title}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/head_image"
        tools:text="Вы выбрали: VIP место"/>


      <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/head_image"
        fresco:placeholderImage="@drawable/vip"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/seat_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

      <TextView
        android:id="@+id/cpu"
        style="@style/StemRegular15Base"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/start_head"
        android:layout_marginEnd="@dimen/start_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_image"
        android:text="@{seat.cpu}"
        android:visibility="@{TextUtils.isEmpty(seat.cpu) ? View.GONE : View.VISIBLE}"
        tools:text="ПК: Intel Core i5-8600K | 16GB DDR4 | 512 GB SSD NVMe &amp; 2TB 7200 | nVidia GTX 1070 8GB Монитор: LG 34 &quot; 34UC79G 144hz \\ LG 32 &quot; 32GK850G 144hz \\ LG 24 &quot; 24GM79G 144hz Гарнитура: Logitech G PRO \\ Logitech G231 \\ Logitech Headset G433 Клавиатура: Logitech G512 Carbon Mechanical GX Blue Мышь: Logitech G102 Prodigy \\ Logitech G403 Prodigy kkk"/>



      <TextView
        android:id="@+id/tv_date"
        style="@style/StemMedium15Black"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/start_head"
        app:layout_constraintTop_toBottomOf="@id/cpu"
        app:layout_constraintStart_toStartOf="@id/head_image"
        android:background="@drawable/ripple_effect_title_click"
        android:clickable="true"
        android:onClick="@{()-> iChooseView.onDateClickListener()}"
        android:text="@{td.date}"
        tools:text="@string/seatdetail_date"/>


      <ImageView
        android:id="@+id/iv_arr_date"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/head_image"
        app:layout_constraintTop_toTopOf="@id/tv_date"
        android:layout_alignTop="@id/tv_date"
        android:src="@drawable/ic_down_arrow"/>

      <View
        android:id="@+id/v_date_tap"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/cpu"
        app:layout_constraintEnd_toEndOf="@id/head_image"
        android:layout_alignBottom="@id/iv_arr_date"
        android:layout_alignEnd="@id/head_image"
        android:onClick="@{()-> iChooseView.onDateClickListener()}"/>



      <TextView
        android:id="@+id/tv_time"
        style="@style/StemMedium15Black"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/head_image"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        android:background="@drawable/ripple_effect_title_click"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{()-> iChooseView.onTimeClickListener()}"
        android:text="@{td.time}"
        tools:text="@string/seatdetail_time"/>


      <View
        android:id="@+id/v_time_tap"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/head_image"
        app:layout_constraintTop_toBottomOf="@id/v_date_tap"
        android:layout_alignBottom="@id/iv_arr_time"

        android:layout_alignEnd="@id/head_image"
        android:onClick="@{()-> iChooseView.onTimeClickListener()}"/>

      <ImageView
        android:id="@+id/iv_arr_time"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignEnd="@id/head_image"
        android:layout_alignTop="@id/tv_time"
        app:layout_constraintEnd_toEndOf="@id/head_image"
        app:layout_constraintTop_toTopOf="@id/tv_time"
        android:src="@drawable/ic_down_arrow"/>

      <View
        android:id="@+id/next_button"
        android:layout_width="@dimen/width_button"
        android:layout_height="@dimen/height_button"
        android:layout_marginTop="55dp"
        android:layout_alignTop="@id/tv_time"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bgr_24dp"
        android:onClick="@{() -> iChooseView.onNextButtonClickListener()}"/>

      <TextView
        android:id="@+id/btn_next"
        style="@style/StemMedium15Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/next_button"
        android:layout_alignBottom="@id/next_button"
        app:layout_constraintStart_toStartOf="@id/next_button"
        app:layout_constraintEnd_toEndOf="@id/next_button"
        app:layout_constraintTop_toTopOf="@id/next_button"
        app:layout_constraintBottom_toBottomOf="@id/next_button"
        android:layout_centerHorizontal="true"
        android:text="@string/seatdetail_btn"
        android:textAlignment="center"/>


    </android.support.constraint.ConstraintLayout>
  </ScrollView>
</layout>
