<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ru.prsolution.winstrike.common.ChooseSeatLinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_slider"
        android:background="@android:color/transparent"
        android:gravity="top|center"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/content"
                android:layout_width="204dp"
                android:layout_height="140dp"
                android:foreground="?selectableItemBackgroundBorderless"
                android:src="@drawable/event"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:focusable="true" />
            <TextView
                android:id="@+id/seat_title"
                style="@style/StemRegular17White"
                tools:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Обычные"
                app:layout_constraintVertical_bias=".85"
                app:layout_constraintStart_toStartOf="@id/content"
                app:layout_constraintEnd_toEndOf="@id/content"
                app:layout_constraintTop_toTopOf="@id/content"
                app:layout_constraintBottom_toBottomOf="@id/content"
                />
        </android.support.constraint.ConstraintLayout>
    </ru.prsolution.winstrike.common.ChooseSeatLinearLayout>
</LinearLayout>