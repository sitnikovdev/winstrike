<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_club_radius">

        <android.support.constraint.ConstraintLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.Guideline
                android:id="@+id/line_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/keyline_40dp" />

            <android.support.constraint.Guideline
                android:id="@+id/line_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/keyline_40dp" />

            <android.support.constraint.Guideline
                android:id="@+id/line_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/height_toolbar_56dp" />

            <android.support.constraint.Guideline
                android:id="@+id/line_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/height_statusbar_14dp" />


            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_club"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@id/line_end"
                app:layout_constraintStart_toStartOf="@id/line_start"
                app:layout_constraintTop_toTopOf="@id/line_status" />

            <TextView
                android:id="@+id/tv_date_news"
                style="@style/StemMedium15Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marging_title_7dp"
                android:text="@string/itembonus_title"
                app:layout_constraintBottom_toTopOf="@id/iv_thumbnail"
                app:layout_constraintStart_toStartOf="@id/iv_thumbnail" />

            <TextView
                android:id="@+id/tv_time_left"
                style="@style/StemRegular15Black"
                android:text="@string/itembonus_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_standart_16dp"
                app:layout_constraintStart_toStartOf="@id/iv_thumbnail"
                app:layout_constraintTop_toBottomOf="@id/iv_thumbnail"
                />

            <TextView
                android:id="@+id/tv_bonus"
                style="@style/StemRegular15Black"
                android:text="@string/bonus_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="@id/iv_thumbnail"
                app:layout_constraintTop_toBottomOf="@id/tv_time_left"
                />

            <View
                android:id="@+id/v_separator"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/main_shadow_separator"
                app:layout_constraintTop_toBottomOf="@id/tv_bonus"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
